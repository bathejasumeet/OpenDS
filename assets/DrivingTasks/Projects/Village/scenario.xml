<?xml version="1.0" encoding="UTF-8"?>
<scenario xmlns="http://opends.eu/drivingtask/scenario"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://opends.eu/drivingtask/scenario ../../Schema/scenario.xsd">

        <environment>
        	<weather>
                <snowingPercentage>100</snowingPercentage>
        		<rainingPercentage>-1</rainingPercentage>
        		<fogPercentage>50</fogPercentage>
        	</weather>
        </environment>

        <driver>
        	<car id="" ref="driverCar" profile="">
        		<tires profile="">
        			<type>winter</type>
        			<size>16</size>
        		</tires>
        		<engine profile="">
        			<engineOn>true</engineOn>
        			<minSpeed>0</minSpeed>
					<maxSpeed>180</maxSpeed>
					<acceleration>3.3</acceleration>
					<minRPM>750</minRPM>
					<maxRPM>7500</maxRPM>
        		</engine>
        		<transmission>
        			<automatic>true</automatic>
        			<reverse>3.182</reverse>
        			<forward>
	        			<vector jtype="java_lang_Float" size="6">
							<entry>3.615</entry>
							<entry>1.955</entry>
							<entry>1.281</entry>
							<entry>0.973</entry>
							<entry>0.778</entry>
							<entry>0.646</entry>
						</vector>
					</forward>
        		</transmission>
        		<suspension>
					<stiffness>120</stiffness>
					<compression>0.2</compression>
					<damping>0.3</damping>
        		</suspension>
        		<wheel>
        			<frictionSlip>50</frictionSlip>
        		</wheel>
        		<brake profile="">
        			<decelerationFreeWheel>2.0</decelerationFreeWheel>
        			<decelerationBrake>8.7</decelerationBrake>
        		</brake>
        	</car>
        </driver>

        <traffic>
					<vehicle id="car1a">
						<modelPath>Models/Cars/drivingCars/bmw1/Car.j3o</modelPath>
						<mass>800</mass>
						<acceleration>3.3</acceleration>
						<decelerationBrake>8.7</decelerationBrake>
						<decelerationFreeWheel>2.0</decelerationFreeWheel>
						<engineOn>true</engineOn>
						<maxDistanceFromPath>10.0</maxDistanceFromPath>
						<curveTension>0.05</curveTension>
						<pathIsCycle>false</pathIsCycle>
						<pathIsVisible>false</pathIsVisible>
						<startWayPoint>WayPoint_1</startWayPoint>
						<wayPoints>
							<wayPoint id="WayPoint_1"><translation><vector jtype="java_lang_Float" size="3"><entry>150.956</entry><entry>14.499</entry><entry>201.693</entry></vector></translation><speed>40</speed></wayPoint>
							<wayPoint id="WayPoint_2"><translation><vector jtype="java_lang_Float" size="3"><entry>60.934</entry><entry>7.43</entry><entry>200.322</entry></vector></translation><speed>40</speed></wayPoint>
							<wayPoint id="WayPoint_3"><translation><vector jtype="java_lang_Float" size="3"><entry>-39.908</entry><entry>0.136</entry><entry>199.6</entry></vector></translation><speed>30</speed></wayPoint>
							<wayPoint id="WayPoint_4"><translation><vector jtype="java_lang_Float" size="3"><entry>-100.553</entry><entry>0.136</entry><entry>195.785</entry></vector></translation><speed>70</speed></wayPoint>
						</wayPoints>
		        	</vehicle>

        </traffic>

        <road>
        	<intersection id="Intersection1" mode="trigger">
        		<phases>
					<phase id="01" duration="1000" state="xrr"/>
					<phase id="02" duration="3000" state="grr"/>
					<phase id="03" duration="1000" state="yrr"/>
					<phase id="04" duration="1000" state="rxr"/>
					<phase id="05" duration="3000" state="rgr"/>
					<phase id="06" duration="1000" state="ryr"/>
					<phase id="07" duration="1000" state="rrx"/>
					<phase id="08" duration="3000" state="rrg"/>
					<phase id="09" duration="1000" state="rry"/>
				</phases>
				<trafficLights>
	        		<trafficLight id="TrafficLight_1" phasePosition="1">
						<direction>right</direction>
						<requiresRed>TrafficLight_2,TrafficLight_3</requiresRed>
	        		</trafficLight>
	        		<trafficLight id="TrafficLight_2" phasePosition="2">
						<direction>right</direction>
						<requiresRed>TrafficLight_1,TrafficLight_3</requiresRed>
	        		</trafficLight>
	        		<trafficLight id="TrafficLight_3" phasePosition="3">
						<direction>left</direction>
						<requiresRed>TrafficLight_1,TrafficLight_2</requiresRed>
	        		</trafficLight>
        		</trafficLights>
        	</intersection>
        </road>

				 

</scenario>
